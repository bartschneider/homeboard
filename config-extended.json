{
  "refresh_interval": 15,
  "server_port": 8081,
  "title": "E-Paper Dashboard",
  "theme": {
    "font_family": "serif",
    "font_size": "16px",
    "background": "#ffffff",
    "foreground": "#000000"
  },
  "widgets": [
    {
      "name": "Clock",
      "script": "widgets/clock.py",
      "enabled": true,
      "timeout": 10,
      "parameters": {
        "format": "%Y-%m-%d %H:%M:%S",
        "timezone": "Local"
      }
    },
    {
      "name": "System Status",
      "script": "widgets/system.py",
      "enabled": true,
      "timeout": 15,
      "parameters": {
        "show_cpu": true,
        "show_memory": true,
        "show_disk": true
      }
    },
    {
      "name": "Todo List",
      "script": "widgets/todo.py",
      "enabled": true,
      "timeout": 10,
      "parameters": {
        "use_static": true,
        "max_items": 6,
        "file_path": "/path/to/your/todos.txt"
      }
    },
    {
      "name": "Weather",
      "script": "widgets/weather.py",
      "enabled": false,
      "timeout": 15,
      "parameters": {
        "api_key": "YOUR_OPENWEATHERMAP_API_KEY",
        "location": "Your City",
        "units": "metric"
      }
    }
  ]
}