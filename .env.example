# Environment variables for E-Paper Dashboard Docker deployment
# Copy this file to .env and customize values

# Application settings
CONFIG_PATH=/app/config.json
PYTHONPATH=/app/widgets
TZ=UTC

# Security settings
REDIS_PASSWORD=your-secure-redis-password-here
GRAFANA_PASSWORD=your-secure-grafana-password-here

# Database settings (for development)
POSTGRES_DB=homeboard_dev
POSTGRES_USER=homeboard
POSTGRES_PASSWORD=your-secure-postgres-password-here

# Nginx settings
NGINX_HOST=localhost
NGINX_PORT=80

# SSL settings (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring settings
PROMETHEUS_RETENTION=200h
GRAFANA_ADMIN_USER=admin

# Development settings
GO_ENV=production
DEBUG=false

# Widget settings
WIDGET_TIMEOUT=30
MAX_WIDGETS=50

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance tuning
WORKER_PROCESSES=auto
MAX_CONNECTIONS=1024

# Rate limiting
API_RATE_LIMIT=100
DASHBOARD_RATE_LIMIT=10

# Cache settings
CACHE_TTL=300
CACHE_SIZE=100MB